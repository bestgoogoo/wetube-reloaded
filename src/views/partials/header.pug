header
    div
        a(href="/").header__logo
            i.fab.fa-youtube
        //- form(method="GET").search__form
        //-     input(type="text", placeholder="Search...", name="keyword")
        //-     button
        //-         i.fas.fa-search
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            i.fas.fa-user
                        else if !loggedInUser.socialOnly
                            img(src="/" + loggedInUser.avatarUrl).header__avatar
                        else
                            img(src=loggedInUser.avatarUrl).header__avatar
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/logout") Logout
            else
                li
                    a(href="/login") Login
                li
                    a(href="/join").header__btn Join